<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.polito.mobile.polijobplacement" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".JobApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity1"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignupActivity1"
            android:label="@string/title_activity_signup"
            android:theme="@style/NoBar" >
        </activity>
        <activity
            android:name=".StudentMainPageActivity"
            android:label="@string/title_activity_main_page" >
        </activity>
        <activity
            android:name=".LoginActivity1"
            android:label="@string/title_activity_login"
            android:theme="@style/NoBar" >
        </activity>
        <activity
            android:name=".CompanyMainPageActivity"
            android:label="@string/title_activity_company_main_page" >
        </activity>
        <activity
            android:name=".profile_student"
            android:label="@string/title_activity_profile_student"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".Search_Specific"
            android:label="@string/title_activity_search__specific" >
        </activity>

        <activity
            android:name=".Company_Main_Page"
            android:label="@string/title_activity_company__main__page" >
        </activity>
    </application>


</manifest>
