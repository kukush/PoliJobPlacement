<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.polito.mobile.polijobplacement" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Data.JobApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity1"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignupActivity1"
            android:label="@string/title_activity_signup"
            android:theme="@style/NoBar" >
        </activity>
        <activity
            android:name=".StudentMainPageActivity"
            android:label="@string/title_activity_main_page"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".LoginActivity1"
            android:label="@string/title_activity_login"
            android:theme="@style/NoBar" >
        </activity>
        <activity
            android:name=".CompanyMainPageActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/title_activity_company_main_page" >
        </activity>
        <activity
            android:name=".Search.Search_Specific"
            android:label="@string/title_activity_search__specific" >
        </activity>
        <activity
            android:name=".Profile.StudentProfile"
            android:label="@string/title_activity_student_profile"
            android:windowSoftInputMode = "adjustPan"
            >
        </activity>
        <activity
            android:name=".Profile.CompanyProfile"
            android:label="@string/title_activity_company_profile" >
        </activity>
        <activity
            android:name=".sendNewMessage"
            android:label="@string/title_activity_send_new_message"
            android:windowSoftInputMode="adjustPan">
        </activity>
    </application>

</manifest>
