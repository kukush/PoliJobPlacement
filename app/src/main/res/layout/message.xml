<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent">

        <!--Put form controls here-->
        <TextView
            android:id="@+id/TextViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textSize="10pt">
        </TextView>
        <EditText
            android:id="@+id/EditTextName"
            android:layout_height="wrap_content"
            android:hint="@string/name"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
        </EditText>
        <EditText
            android:id="@+id/EditTextEmail"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:layout_width="fill_parent"
            android:editable="false">
        </EditText>
        <Spinner
            android:id="@+id/SpinnerResponseType"
            android:layout_height="wrap_content"
            android:prompt="@string/Responsetype"
            android:layout_width="fill_parent"
            android:entries="@array/Responsetypelist"
            android:background="#20c6271c">
        </Spinner>

        <TextView
            android:id="@+id/EditTextRecivedMessage"
            android:layout_height="61dp"
            android:hint="@string/RecivedMessage"
            android:editable="false"
            android:inputType="textMultiLine"
            android:lines="5"
            android:layout_width="fill_parent">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/YourMessage"
            android:textSize="10pt">
        </TextView>

        <EditText
            android:id="@+id/EditTextFeedbackBody"
            android:layout_height="wrap_content"
            android:hint="@string/YourMessage"
            android:inputType="textMultiLine"
            android:lines="5"
            android:layout_width="fill_parent">
        </EditText>
        <CheckBox
            android:id="@+id/CheckBoxResponse"
            android:layout_height="wrap_content"
            android:text="@string/response"
            android:layout_width="fill_parent">
        </CheckBox>

        <Button
            android:id="@+id/ButtonSaveasDraft"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/sendResponse"
            android:onClick="sendResponse"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal">
        </Button>

    </LinearLayout>
</ScrollView>